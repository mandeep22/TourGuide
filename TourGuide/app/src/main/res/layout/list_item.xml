<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/activity_height">

    <ImageView
        android:layout_width="@dimen/activity_height"
        android:layout_height="@dimen/activity_height"
        android:layout_gravity="center"
        android:id="@+id/image"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Allegro Hotel"
            android:id="@+id/name_text_view"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="$$"
            android:id="@+id/cost_text_view"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="171 West Randolph Street"
            android:id="@+id/address_text_view"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="(312) 236-0123"
            android:id="@+id/phone_text_view"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>